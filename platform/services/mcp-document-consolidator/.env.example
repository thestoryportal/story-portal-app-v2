# =============================================================================
# MCP Document Consolidator - Environment Configuration
# =============================================================================
# Copy this file to .env and update with your settings

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=consolidator
POSTGRES_USER=consolidator
POSTGRES_PASSWORD=your_secure_password
POSTGRES_SSL=false
POSTGRES_MAX_CONNECTIONS=20

# -----------------------------------------------------------------------------
# Neo4j (Knowledge Graph)
# -----------------------------------------------------------------------------
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_secure_password

# -----------------------------------------------------------------------------
# Redis (Cache)
# -----------------------------------------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Ollama (LLM Service)
# -----------------------------------------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_DEFAULT_MODEL=llama3.1:8b

# Model configuration
LLM_MODEL_GENERAL=llama3.1:8b
LLM_MODEL_REASONING=llama3.1:8b
LLM_MODEL_CODE=codellama:7b
LLM_MODEL_FAST=mistral:7b

# LLM parameters
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2048
LLM_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Embedding Service
# -----------------------------------------------------------------------------
# Path to Python interpreter (should have sentence-transformers installed)
PYTHON_PATH=python3
# Or use virtual environment path
# EMBEDDING_PYTHON_PATH=/app/venv/bin/python3

EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_BATCH_SIZE=32
EMBEDDING_CACHE_ENABLED=true

# -----------------------------------------------------------------------------
# Processing
# -----------------------------------------------------------------------------
MAX_CONCURRENT_DOCUMENTS=10
CLAIM_EXTRACTION_TIMEOUT_MS=30000
CONFLICT_CONFIDENCE_THRESHOLD=0.8

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=info
LOG_FORMAT=json
# Options: debug, info, warn, error
# Format options: json, pretty
