# Story Portal Environment Configuration
# Copy this file to .env.local and update values as needed

# API Configuration
# Use 'true' to enable mock API (default in development)
VITE_USE_MOCK_API=true

# Backend API base URL (only used if VITE_USE_MOCK_API=false)
# Default: http://localhost:3000/api
VITE_API_BASE_URL=http://localhost:3000/api

# API Client Configuration
# Request timeout in milliseconds
VITE_API_TIMEOUT=10000

# Number of retry attempts for failed requests
VITE_API_RETRIES=3

# Analytics
VITE_GA_MEASUREMENT_ID=

# Feature Flags
VITE_FEATURE_BOOKING=true
VITE_FEATURE_STORIES=true
VITE_FEATURE_RECORDING=false
