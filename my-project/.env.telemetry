# Telemetry Configuration for Story Portal Development
# Source this file before running Claude Code to enable token tracking
#
# Usage:
#   source .env.telemetry
#   claude
#
# Or use the enable-telemetry.sh script instead

# Enable OpenTelemetry metrics collection
export CLAUDE_CODE_ENABLE_TELEMETRY=1

# Output metrics to console (readable format)
export OTEL_METRICS_EXPORTER=console

# Export metrics every 10 seconds (good for debugging)
export OTEL_METRIC_EXPORT_INTERVAL=10000

# Optional: Set log level for more detailed output
export CLAUDE_CODE_LOG_LEVEL=debug
